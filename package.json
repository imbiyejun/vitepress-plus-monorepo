{
  "name": "vitepress-plus-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "VitePress Plus - 增强版 VitePress 文档系统",
  "scripts": {
    "dev": "pnpm --filter @imbiyejun/vitepress-plus dev",
    "dev:admin": "pnpm --filter @imbiyejun/vitepress-admin dev",
    "dev:example": "pnpm --filter example-docs dev",
    "build": "pnpm -r --filter \"./packages/**\" build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,vue,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,vue,json,md}\""
  },
  "keywords": [
    "vitepress",
    "documentation",
    "knowledge-management"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@8.15.4",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "typescript": "^5.0.0",
    "prettier": "^3.2.5",
    "eslint": "^9.0.0"
  }
}

